<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Employer</th>
      <th>Title</th>
      <th>Type</th>
      <th>Location</th>
      <th>Wage</th>
      <th>Expiry</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.employer %></td>
        <td><%= job.title %></td>
        <td><%= job.job_type.name %></td>
        <td><%= job.location %></td>
        <td><%= job.wage %></td>
        <td><%= job.expiry %></td>
        <td><%= job.link %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

